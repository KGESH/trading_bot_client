{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "trading_bot_client",
    "version": "0.0.3"
  },
  "tauri": {
    "allowlist": {
      "all": true,
      "protocol": {
        "asset": true,
        "assetScope": ["*/**"]
      },
      "shell": {
        "all": true,
        "open": true,
        "execute": true,
        "sidecar": true,
        "scope": [
          {
            "name": "../external/backend/backend",
            "sidecar": true
          }
        ]
      },
      "http": {
        "all": true,
        "request": true,
        "scope": ["http://*", "https://*", "ws://*", "wss://*", "tauri://*"]
      },
      "fs": {
        "all": true,
        "scope": ["*/**"]
      }
    },
    "windows": [
      {
        "title": "trading_bot_client",
        "width": 1024,
        "height": 768,
        "resizable": true,
        "additionalBrowserArgs": "--disable-web-security"
      }
    ],
    "security": {
      "csp": ""
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.wildcoder.me",
      "icon": ["icons/32x32.png", "icons/128x128.png", "icons/128x128@2x.png", "icons/icon.icns", "icons/icon.ico"],
      "externalBin": ["../external/backend/backend"]
    },
    "updater": {
      "active": true,
      "dialog": true,
      "endpoints": [
        "https://https://bd7f-195-175-35-62.ngrok-free.app/update?current_version={{current_version}}&target={{target}}&arch={{arch}}"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEYyQUUwMUVCNkI2RjdGNEQKUldSTmYyOXI2d0d1OGpTWmNtK1loWmNkRmtTemtUcFZlcittVGQ0ZkFLcTR1ZmlMS0pjbk8wajgK"
    }
  }
}
